# vim: set ft=gitconfig:

[alias]
  lg = log --abbrev-commit --date=relative --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
  gsb = gss --branch
  verbs = !git log --pretty=format:'%s' | cut -d \" \" -f 1 | sort | uniq -c | sort -nr | head -15
  patch = !git --no-pager diff --no-color

[branch]
  autoSetupRebase = always

[core]
  autocrlf = input
  excludesfile = ~/.dotfiles/git/.gitignore_global

  # Speed up commands involving untracked files such as "git status".
  # https://git-scm.com/docs/git-update-index#_untracked_cache
  untrackedCache = true

[color]
  ui = always

[color "status"]
  added = cyan
  changed = red
  untracked = yellow

[commit]
  gpgSign = true
  template = ~/.dotfiles/git/gitmessage.txt

[fetch]
  prune = true

[gpg]
  program = gpg

[help]
  autocorrect = 1

[interactive]
  singleKey = true

[merge]
  tool = vimdiff

[rebase]
  autoSquash = true

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX

[push]
  default = current

[user]
  name = Rui Afonso Pereira
  signingkey = F2D97CF6F1156874
  useConfigOnly = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main
